<resources>
    <style name="Theme.MyRecipe" parent="Theme.Material3.DayNight.NoActionBar"/>

    <style name="Theme.MyRecipe.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style parent="@style/Theme.AppCompat.Light" name="MaterialSearchViewStyle">
    <item name="android:textColor">@color/black</item>
    <item name="android:textColorHint">@color/iconColor</item>
    <item name="android:hint">@string/search_hint</item>
    <item name="searchBackIcon">@drawable/ic_baseline_arrow</item>
    <item name="searchBackground">@color/bgMain</item>
    <item name="searchCloseIcon">@drawable/ic_close</item>
    <item name="searchSuggestionBackground">@android:color/white</item>

    </style>


    <style name="Theme.MyRecipe.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MyRecipe.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>